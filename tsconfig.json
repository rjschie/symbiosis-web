{
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@symbiosis/components/*": ["src/components/*"],
      "@symbiosis/helpers/*": ["src/helpers/*"],
      "@symbiosis/modifiers/*": ["src/modifiers/*"],
      "@symbiosis/routes/*": ["src/routes/*"],
      "@symbiosis/services/*": ["src/services/*"],
      "@symbiosis/public/*": ["public/*"]
    },
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "types": ["qunit"]
  },
  "include": ["src/**/*", "tests/**/*", "types/**/*"],
  "exclude": ["node_modules", "tmp", "dist"]
}
